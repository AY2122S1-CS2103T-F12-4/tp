<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.stage.Stage?>

<fx:root resizable="false"
         title="Summary"
         type="javafx.stage.Stage"
         xmlns="http://javafx.com/javafx/11"
         xmlns:fx="http://javafx.com/fxml/1">
    <icons>
        <Image url="@/images/summary_icon.png"/>
    </icons>
    <scene>
        <Scene>
            <stylesheets>
                <URL value="@Fonts.css"/>
                <URL value="@SummaryWindow.css"/>
            </stylesheets>

            <HBox alignment="CENTER">
                <children>
                    <Label fx:id="summaryMessage" text="Label">
                        <HBox.margin>
                            <Insets right="10.0"/>
                        </HBox.margin>
                    </Label>
                    <Button fx:id="copyButton" mnemonicParsing="false" onAction="#copySummary" text="Copy Summary">
                        <HBox.margin>
                            <Insets left="10.0"/>
                        </HBox.margin>
                    </Button>
                </children>
                <opaqueInsets>
                    <Insets bottom="15.0" left="20.0" right="20.0" top="15.0"/>
                </opaqueInsets>
                <padding>
                    <Insets bottom="15.0" left="20.0" right="20.0" top="15.0"/>
                </padding>
            </HBox>
        </Scene>
    </scene>
</fx:root>
