<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
    <padding>
      <Insets top="5" right="5" bottom="5" left="15" />
    </padding>
    <HBox spacing="5" alignment="CENTER_LEFT">
      <Label fx:id="name" text="\$name" styleClass="cell_big_label" />
      <Label fx:id="tier" text="\$tier" styleClass="cell_big_label" />
    </HBox>
    <HBox alignment="CENTER_LEFT">
      <Label styleClass="cell_small_label, cell_small_label_width" text="ID: " />
      <Label fx:id="id" styleClass="cell_small_label" text="\$id" />
    </HBox>
    <HBox alignment="CENTER_LEFT">
      <Label styleClass="cell_small_label, cell_small_label_width" text="Phone: " />
      <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" />
    </HBox>
    <HBox alignment="CENTER_LEFT">
      <Label styleClass="cell_small_label, cell_small_label_width" text="Email: " />
      <Label fx:id="email" styleClass="cell_small_label" text="\$email" />
    </HBox>
    <HBox alignment="CENTER_LEFT">
      <Label styleClass="cell_small_label, cell_small_label_width" text="ID: " />
      <Label fx:id="address" styleClass="cell_small_label" text="\$address" />
    </HBox>
    <HBox alignment="CENTER_LEFT">
      <Label styleClass="cell_small_label, cell_small_label_width" text="ID: " />
      <Label fx:id="registrationTime" styleClass="cell_small_label" text="\$registrationTime" />
    </HBox>
    <HBox alignment="CENTER_LEFT">
      <Label styleClass="cell_small_label, cell_small_label_width" text="Credit: " />
      <Label fx:id="credit" styleClass="cell_small_label" text="\$credit" />
    </HBox>
    <HBox alignment="CENTER_LEFT">
      <Label styleClass="cell_small_label, cell_small_label_width" text="Point: " />
      <Label fx:id="point" styleClass="cell_small_label" text="\$point" />
    </HBox>
    <HBox alignment="CENTER_LEFT">
      <Label styleClass="cell_small_label, cell_small_label_width" text="Transactions: " />
      <FlowPane fx:id="transactions" />
    </HBox>
    <HBox alignment="CENTER_LEFT">
      <Label styleClass="cell_small_label, cell_small_label_width" text="Reservations: " />
      <FlowPane fx:id="reservations" />
    </HBox>
  </VBox>
</HBox>
